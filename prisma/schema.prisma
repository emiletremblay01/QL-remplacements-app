generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
  
}

model Remplacement {
  id        String      @id @map("_id") @default(auto())  @db.ObjectId
  nomEquipier String
  dateDemande DateTime
  recuPar String
  dateQuart DateTime
  posteQuart String
  heuresQuart String
  raison String?
  courrielEnvoye String
  statut String
  nomEquipierRemplacant String?
  remplacementEffectuePar String?
}

